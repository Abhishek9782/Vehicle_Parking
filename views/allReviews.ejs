<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Reviews</title>
    <link rel="icon" href="../frontimage/icon.webp">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="/stylee.css">
</head>

<body>
    <nav id="nav-review">

        <div class="logo">Our Parking</div>
        <input type="checkbox" id="click">
        <label for="click" class="menu-btn">
            <i class="fas fa-bars"></i>
        </label>
        <ul>

            <li><a href="/"> Home</a></li>
            <li><a href="/allentry" class="all">All Entry</a></li>
            <li><a href="/allreviews" class="inactive">Reviews</a></li>
            <li><a href="/alloutViechele">Out Viechels</a></li>
            <li><a href="" class="contact">Contact Us</a></li>
            <li><a href="/login">
                    <button id="logout" class="btn btn-light form-control">Log Out</button>
                </a></li>
        </ul>




    </nav>





    <section id="mid-reviews">
    <div>
        <button class="btn btn-primary button">Total Reviews <span class="badge bg-secondary"><%=countt%></span> </button>
    </div>
        <div class="container" >
            <div class="row">
                <div class="col-md-12 table-responsive">
                    <table class="table table-hover">
                        <tr >
                            <th>Sr</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Reviews</th>
                            <th>Status</th>
                        </tr>
                        <% let a=1; %>
                        <% allReview.forEach((result)=>{ %>

                       
                        <tr > 
                            <td><%=a++%></td>
                            <td><%= result.name%></td>
                            <td><%= result.email%></td>
                            <td><%=result.rev%></td>
                         <td><a href="/updatestatus/<%= result.id%>"><button class="btn btn-light"><%= result.status%></button></a></td>
                        </tr>
                    <% })%>
                    </table>
                   
                </div>
              
            </div>
        </div>
    
    </section>

    <%- include('../partiels/footer.ejs')%>
</body>
